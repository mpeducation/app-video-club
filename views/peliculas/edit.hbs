<h1>Editar película</h1>

<hr>

<form action="/peliculas/{{pelicula._id}}?_method=PUT" method="POST">

    <div class="mb-3">
        <label for="title" class="form-label">Título</label>
        <input type="text" class="form-control" id="title" name="title" value="{{pelicula.title}}" placeholder="Ingrese título de la película">
    </div>

    <div class="mb-3">
        <label for="genre" class="form-label">Genero</label>
        <input type="text" class="form-control" id="genre" name="genre" value="{{pelicula.genre}}" placeholder="Ingrese genero de la película">
    </div>

    <div class="mb-3">
        <label for="year" class="form-label">Año</label>
        <input type="text" class="form-control" id="year" name="year" value="{{pelicula.year}}" placeholder="Ingrese año de la película">
    </div>

    <button class="btn btn-secondary">Editar</button>

</form>